<%- layout('/layouts/boilerplate') %>
<body>
  <h2>Edit post</h2>
    <form id="editPostForm" class="p-4 border rounded needs-validation" method="post" action="/posts/<%=posts._id %>?_method=put"
           novalidate >
      <div class="mb-3">
        <label for="postTitle" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          id="postTitle"
          name="posts[title]"
          value="<%= posts.title %>"
          required>
      </div>
      
      <div class="mb-3">
        <label for="postDescription" class="form-label">Description</label>
        <textarea
          class="form-control"
          id="postDescription"
          name="posts[description]"
          rows="4"
          required
          ><%= posts.description %></textarea>
      </div>
      
      <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL</label>
        <input
          type="url"
          class="form-control"
          id="imageUrl"
          name="posts[image]"
          value='<%= posts.image.url %>' required>
      </div>
      
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
    
 
  
</body>

    


