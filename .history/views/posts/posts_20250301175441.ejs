<%- layout('/layouts/boilerplate') %>
<body>
  <div class="create-btn">
    <button style="background-color: #d8af95;" class="btn btn-lg mt-3 " id="openPopupBtn">Create New Post</button>
    <%- include('./newPost') %>
  </div>
 

 
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    
    <% for(let post of allPost) { %>
      <div class="col mb-4">
        <div class="card cards">
          <!-- Image triggers the modal -->
          <div class="card-header d-flex align-items-center justify-content-between p-2">
            <div class="d-flex align-items-center">
               <!-- Circle Logo -->
              <img src="https://i.pravatar.cc/40?img=<%= Math.floor(Math.random() * 70) %>" 
                alt="Logo" 
                class="rounded-circle" 
                width="40" 
                height="40">
       <!-- Username -->
              <span class="username">user__</span>

            </div>
           
            <!-- Three-dot Dropdown -->
            <div class="dropdown">
                <button
                  class="btn btn-light p-2 rounded-circle"
                  type="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                  style="width: 40px; height: 40px;">
                <!-- Three-dot icon (vertical) -->
                  <i class="fas fa-ellipsis-v"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><button class="dropdown-item editBtn" 
                    data-id="<%= post._id %>"
                    data-title="<%= post.title %>"
                    data-description="<%= post.description %>"
                    data-image="<%= post.image.url %>"
                    >Edit Post</button></li>
                    <!-- the edit button holds the post data in data-* attributes. -->
                  
                  <li><a class="dropdown-item" id="delBtn">Delete</a></li>
                </ul>
            </div>
          </div>
          
          <img src="<%= post.image.url%>" class="card-img-top post-image" alt="<%= post.title %>" 
               data-bs-toggle="modal" data-bs-target="#postModal<%= post._id %>">
          <div class="card-body card-content">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text">
              <%= post.description.substring(0, 100) %>...
            </p>
        
            <!-- "Show More" button on your post card -->
            <button  id="showMoreBtn">Show More</button>

            <!-- Custom popup overlay for full post content -->
             <div id="showMorePopup" class="popup-overlay">
              <div class="popup-content">
                  <span id="closeShowMoreBtn" class="close-btn">&times;</span>
                       <h2>Full Post Details</h2>
                  <p id="fullPostContent">
                   <!-- Full post content will go here (can be populated dynamically) -->
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum...
                    </p>
                    </div>
                </div>


          </div>
          <div class="card-footer d-flex justify-content-between">
            <button class="btn btn-footer" title="Like">
              &#128077; Likes
            </button>
            <button class="btn btn-footer" title="Comment">
              &#128172; Comment
            </button>
          </div>
        </div>
      </div>

    
    <% } %>
  </div>




  <!-- Bootstrap JS Bundle (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
